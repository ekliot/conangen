</button>

<div id="ChargenAccordionHomelandContent" class="ui lifepath_accordion content">

    <%# form_for ... %>

    <div id="ChargenHomelandForm" class="ui form">
        <div class="ui celled stackable relaxed grid">

            <div class="one column row">

                <div class="ui center aligned column">
                    <span class="ui header">Select a homeland:</span>
                    <div id="ChargenHomelandDropdown" class="ui scrolling floating inline dropdown button">
                        <input id="ChargenHomelandInput" name="selected_homeland" type="hidden">

                        <div class="ui default text"></div>
                        <div class="ui menu">
                            <% @homelands.each do |home| %>
                            <div class="ui item">
                                <span class="ui description"><%= home.talent.name %></span>
                                <span class="ui text"><%= home.name %></span>
                            </div>
                            <% end %>
                        </div>
                    </div>
                </div>

            </div>

            <div class="two column row">

                <div id="ChargenHomelandTalent" class="ui center aligned column">
                    <input id="ChargenHomelandInputTalent" name="selected_homeland_talent" type="hidden">
                    <!-- something goes here for the talent name container -->
                    <span class="ui header">Selected talent: </span>TALENT
                </div>

                <div id="ChargenHomelandLanguage" class="ui center aligned column">
                    <input id="ChargenHomelandInputLanguage" name="selected_homeland_language" type="hidden">
                    <!-- something goes here for the language container -->
                    <span class="ui header">Selected language: </span>LANGUAGE
                </div>

            </div>

        </div>
    </div>
</div>
