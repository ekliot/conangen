<button id="ChargenAccordionNatureTitle" class="ui basic fluid labeled icon lifepath_accordion title button">
    <!-- <i class="ui fitted user icon"></i> -->
    <span class="ui header">Nature</span>

    <!-- TODO -->

    <!-- <div class="ui basic icon right floated buttons">
        <div class="ui compact button">
            <i class="cube icon"></i>
        </div>
        <div class="ui compact button">
            <i class="lock icon"></i>
        </div>
    </div> -->
</button>

<div id="ChargenAccordionNatureContent" class="ui lifepath_accordion content">

    <!--
        TODO where does attribute go? in the dropdown slelection description is
        cute, but there should be an explicit place (especially to match the
        Educations format)
    -->

    <%# form_for ... %>

    <div id="ChargenNatureForm" class="ui form">
        <div class="ui celled stackable relaxed grid">

            <div class="one column row">

                <div class="ui center aligned column">
                    <span class="ui header">Select a nature:</span>
                    <div id="ChargenNatureDropdown" class="ui scrolling inline dropdown button">
                        <input id="ChargenNatureInput" name="selected_nature" type="hidden">

                        <!-- TODO center the selected text -->

                        <div class="ui default text">...</div>
                        <div class="ui menu">
                            <% @natures.each do |nature| %>
                            <div class="ui item">
                                <span class="ui description">+1 <%= nature.attr.titlecase %></span>
                                <span class="ui text"><%= nature.name %></span>
                            </div>
                            <% end %>
                        </div>
                    </div>
                </div>

            </div>

            <% nature = Lifepath::Nature.find(1 + Random.rand(10)) %>

            <div class="two column row">
                <%= render partial: "layouts/characters/lifepath/nature/row_two", locals: { nature: nature } %>
            </div>

            <div class="two column row">
                <%= render partial: "layouts/characters/lifepath/nature/row_three", locals: { nature: nature } %>
            </div>

        </div>
    </div>
</div>
