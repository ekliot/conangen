<h1 class="ui centered header">Select a nature</h1>

<div class="ui divider"></div>

<% natures = Lifepath::Nature.find_each %>

<div class="ui grid">
  <div class="ui stretched row">

    <!-- NATURE MENU -->

    <div class="ui three wide column nature_menu">
      <div class="ui fluid vertical tabular pointing menu nature_menu">

        <% natures.each do |nature| %>
          <a  class="ui item <%= if nature.id == 1 then "active " end %>tab nature_tab"
              data-tab="nature::<%= nature.id %>" id="nature::<%= nature.id %>"
              data-nature-name="<%= nature.name %>" onclick="select_nature( this )">
            <%= nature.name %>
          </a>
        <% end %>

      </div>
    </div>

    <!-- NATURE BODY -->

    <div class="ui thirteen wide column nature_seg">

      <% natures.each do |nature| %>
        <div  class="ui <%= if nature.id == 1 then "active " end %>tab fluid nature_segment"
              data-tab="nature::<%=nature.id %>">
          <h2 class="ui centered header">
            <%= nature.name %>
            <div class="ui sub header">+1 <b><%= nature.attr %></b></div>
          </h2>

          <div class="ui secondary segment">
            <p>
              <%= nature.description %>
            </p>
          </div>

          <div class="ui divider"></div>

          <div class="ui divided grid">

            <!-- MANDATORY SKILLS -->

            <div class="ui five wide column nature_mand_skills">

              <h3 class="ui centered header">
                Mandatory skills
                <div class="ui sub header">+1 expertise and focus to each listed skill</div>
              </h3>

              <% mand_skills = [ nature.skill_mandatory1, nature.skill_mandatory2, nature.skill_mandatory3 ] %>

              <div class="ui green cards">

                <% for skill in mand_skills do %>

                <div  class="ui card" data-skill-mandatory="<%= skill %>">
                  <div class="content">
                    <div class="ui centered header">
                      <%= CharactersHelper.format_skill skill %>
                    </div>
                  </div>
                </div>

                <% end %>

              </div>

            </div>

            <!-- OPTIONAL SKILLS -->

            <div class="ui five wide column nature_ele_skills">
              <h3 class="ui centered header">
                Elective skills
                <div class="ui sub header">+1 expertise and focus to two selected skills</div>
              </h3>

              <div class="ui cards">

                <% ele_skills = [ nature.skill_elective1, nature.skill_elective2, nature.skill_elective3 ] %>

                <% for skill in ele_skills do %>

                <a  class="ui red card" data-skill-elective="<%= skill %>"
                    onclick="select_edu_skill( this )">
                  <div class="content">
                    <div class="ui centered header">
                      <%= CharactersHelper.format_skill skill %>
                    </div>
                  </div>
                </a>

                <% end %>

              </div>
            </div>

            <div class="ui six wide column nature_talents">
              <h3 class="ui centered header">
                Select a talent
              </h3>

              <% talents = nature.get_talents %>
              <% select_tal = talents[nature.skill_mandatory1].first %>

              <span><b>Selected talent:</b> <%= select_tal.name %></span>

              <div class="ui styled accordion">

                <% talents.each do |skill_cat, skill_talents| %>
                  <% if !skill_cat.empty? %>

                    <div class="<%= "active " if skill_cat == talents.keys.first %>title">
                      <i class="ui dropdown icon"></i>
                      <%= CharactersHelper.format_skill skill_cat %>
                    </div>

                    <div class="<%= "active " if skill_cat == talents.keys.first %>content">
                      <div class="ui two vertical buttons">

                        <% skill_talents.each do |talent| %>
                          <button class="ui button">
                            <%= talent.name %>
                          </button>
                        <% end %>

                      </div>
                    </div>

                  <% end %>
                <% end %>

              </div>
            </div>

          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>
