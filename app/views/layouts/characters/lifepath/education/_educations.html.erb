<div id="ChargenAccordionEducationContent" class="ui lifepath_accordion content">

    <!-- TODO where does equipment go? -->

    <%# form_for ... %>

    <div id="ChargenEducationForm" class="ui form">
        <div class="ui celled stackable relaxed grid">

            <div class="one column row">

                <div class="ui center aligned column">
                    <span class="ui header">Select an education:</span>
                    <div id="ChargenEducationDropdown" class="ui scrolling inline dropdown button">
                        <input id="ChargenEducationInput" name="selected_education" type="hidden">

                        <!-- TODO center the selected text -->

                        <div class="ui default text">...</div>
                        <div class="ui menu">
                            <% @educations.each do |education| %>
                            <div class="ui item">
                                <span class="ui text"><%= education.name %></span>
                            </div>
                            <% end %>
                        </div>
                    </div>
                </div>

            </div>

            <% education = Lifepath::Education.find(1 + Random.rand(10)) %>

            <div class="two column row">
                <%= render partial: "layouts/characters/lifepath/education/row_two", locals: { education: education } %>
            </div>

            <div class="two column row">
                <%= render partial: "layouts/characters/lifepath/education/row_three", locals: { education: education } %>
            </div>

        </div>
    </div>
