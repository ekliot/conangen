<div class="ui row" id="aspect_mand_attr">
  <h2 class="ui centered header">
    Mandatory Attributes
    <div class="ui sub header">
      Select one best and one worst attribute, unselected attributes get +2
    </div>
  </h2>

  <div class="ui grid" id="aspect_mand_attr_heads">

    <div class="ui eight wide column">
      <h3 class="ui centered header" id="aspect1_mand_header">$aspect1</h3>
    </div>

    <div class="ui eight wide column">
      <h3 class="ui centered header" id="aspect2_mand_header">$aspect2</h3>
    </div>

  </div>

  <div class="ui grid" id="aspect_mand_attr_sel">

    <div class="ui eight wide column" id="aspect1_mand_attr_sel">
      <div class="ui centered cards">

        <div class="ui card" id="aspect1_mand_attr1">
          <div class="ui top attached content">
            <div class="ui centered header">$aspect1_attr1</div>
          </div>

          <div class="ui bottom attached content">
            <div class="ui fluid two buttons">
              <button class="ui green button" data-aspect-mand="best">BEST (+3)</button>
              <button class="ui red button" data-aspect-mand="worst">WORST (+1)</button>
            </div>
          </div>
        </div>

        <div class="ui card" id="aspect1_mand_attr2">
          <div class="ui top attached content">
            <div class="ui centered header">$aspect1_attr2</div>
          </div>

          <div class="ui bottom attached content">
            <div class="ui fluid two buttons">
              <button class="ui green button" data-aspect-mand="best">BEST (+3)</button>
              <button class="ui red button" data-aspect-mand="worst">WORST (+1)</button>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="ui eight wide column aspect2_mand_attr_sel">
      <div class="ui centered cards">

        <div class="ui card" id="aspect2_mand_attr1">
          <div class="ui top attached content">
            <div class="ui centered header">$aspect2_attr1</div>
          </div>

          <div class="ui bottom attached content">
            <div class="ui fluid two buttons">
              <button class="ui green button" data-aspect-mand="best">BEST (+3)</button>
              <button class="ui red button" data-aspect-mand="worst">WORST (+1)</button>
            </div>
          </div>
        </div>

        <div class="ui card" id="aspect2_mand_attr2">
          <div class="ui top attached content">
            <div class="ui centered header">$aspect2_attr2</div>
          </div>

          <div class="ui bottom attached content">
            <div class="ui fluid two buttons">
              <button class="ui green button" data-aspect-mand="best">BEST (+3)</button>
              <button class="ui red button" data-aspect-mand="worst">WORST (+1)</button>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>

</div>
